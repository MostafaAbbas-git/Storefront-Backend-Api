{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "node src/server.ts",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "test": "jasmine-ts",
    "tsc": "tsc",
    "test-ts": "npm run test-db-up && npm run jasmine && npm run test-db-down",
    "create-db": "db-migrate db:create storefront",
    "create-test-db": "db-migrate db:create storefront_test",
    "migrate-up": "cross-env ENV=dev db-migrate --env dev up",
    "migrate-down": "cross-env ENV=dev db-migrate --env dev down",
    "create-migration": "db-migrate create migrations --sql-file",
    "dev": "cross-env ENV=dev nodemon --exec npx ts-node src/server.ts",
    "build": "npx tsc",
    "prettier": "prettier --config .prettierrc src/**/*.ts --write",
    "lint": "eslint . --ext .ts",
    "jasmine": "jasmine-ts src/**/*.spec.ts"
  },
  "author": "Mostafa Mahmoud",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "joi-typescript-validator": "^0.2.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.9",
    "@types/jasmine": "^4.0.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^14.18.13",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine": "^4.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.4.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "supertest": "^6.2.2",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.1.8",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.6.3"
  }
}
